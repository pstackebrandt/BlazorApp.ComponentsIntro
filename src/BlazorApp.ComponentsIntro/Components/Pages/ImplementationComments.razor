@* Reusable component for displaying implementation and design comments *@

<!-- Toggle button for implementation comments -->
<button class="btn btn-secondary @ButtonSize @CssClass" 
        @onclick="ToggleComments"
        title="@TooltipText"
        aria-label="@TooltipText">
    <span class="me-1 @IconSize">@ButtonIcon</span>@if (ShowButtonText)
    {
        <span>@(showComments ? "Hide" : "Show") @ButtonText</span>
    }
</button>

@if (showComments)
{
    <div class="mt-3">
        <label for="@textareaId" class="form-label">
            <strong>@LabelText</strong>
        </label>
        <textarea id="@textareaId" 
                  class="form-control" 
                  rows="@CalculatedRows" 
                  @bind="currentComments"
                  placeholder="@Placeholder">
        </textarea>
    </div>
} 