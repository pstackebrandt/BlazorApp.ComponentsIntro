@using BlazorApp.ComponentsIntro.Models

@* 
    Alert Component - Conditionally renders a Bootstrap alert box
    Used to display messages, warnings, or notifications to users
    p.51
*@
@if (Show)
{
    @* Bootstrap alert with configurable styling and top margin *@
    <div class="alert alert-@AlertType.ToString().ToLower() mt-3 mb-3" role="alert">
        @* Render any content passed as child content *@
        @ChildContent
    </div>
}

@code {
    /// <summary>
    /// Controls whether the alert is visible or hidden
    /// </summary>
    [Parameter]
    [EditorRequired]
    public bool Show { get; set; }

    /// <summary>
    /// The type/color of the alert (Primary, Secondary, Success, Danger, Warning, Info, Light, Dark)
    /// </summary>
    [Parameter]
    public AlertType AlertType { get; set; } = AlertType.Secondary;

    /// <summary>
    /// The content to display inside the alert box
    /// Can contain any HTML, text, or other Blazor components
    /// </summary>
    [Parameter]
    [EditorRequired]
    public RenderFragment ChildContent { get; set; } = default!;
}
